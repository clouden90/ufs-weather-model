# ICs
if [[ ${OCNRES} == '025' ]]; then
 if [[ $RT20D == .T. ]]; then
  cp  @[RTPWD]/RUN20d/MOM6_IC/${SYEAR}${SMON}${SDAY}00/ocn/025/MOM*.nc ./INPUT
  cp  @[RTPWD]/RUN20d/CICE_IC/${SYEAR}${SMON}${SDAY}00/ice/025/cice5_model_0.25.res_*.nc cice_model.res.nc
 else
  cp  @[RTPWD]/MOM6_IC/2011100100/MOM*.nc ./INPUT
  cp  @[RTPWD]/CICE_IC/@[OCNRES]/cice5_model_@[ICERES].cpc.res_2011100100.nc cice_model.res.nc
 fi
else
  cp  @[RTPWD]/MOM6_IC/MOM6_IC_TS.nc ./INPUT
