mkdir INPUT DATM_INPUT RESTART history MOM6_OUTPUT

# DATM input
if [[ $RT20D == .T. ]]; then
 cp    @[RTPWD]/RUN20d/DATM_INPUT/${FILENAME_BASE}SCRIP.nc DATM_INPUT
 cp    @[RTPWD]/RUN20d/DATM_INPUT/@[DATM_SRC]/${SYEAR}${SMON}/* DATM_INPUT
else
 cp    @[RTPWD]/DATM/${FILENAME_BASE}SCRIP.nc DATM_INPUT
 cp    @[RTPWD]/DATM/@[DATM_SRC]/201110/* DATM_INPUT
fi

ICERES="${OCNRES:0:1}.${OCNRES:1}"

